package classe;

public class Data {
		int dia;
		int mes;
		int ano;
		static double pi = 3.14; 
		Data(int day, int month, int age){
			this.dia = day;
			this.mes = month;
			this.ano = age;
		}
		
		Data() {
			this.dia = 01;
			this.mes = 01;
			this.ano = 1970;
		}
		
		String obterDataFormatada() {
			return String.format("%d/%d/%d", this.dia, this.mes, this.ano);
		}
}
